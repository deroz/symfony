{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block centrale %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Formulaire
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_admin") }}">Accueil</a>
                        </li>

                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-4">


                    <div class="table-responsive">
                    {{ form_start(formGenre, {"attr":{"novalidate":"novalidate" }}) }}
                        {{ form_errors(formGenre.type) }}
                        {{ form_label(formGenre.type) }}
                        {{ form_widget(
                            formGenre.type, {
                                "attr": {
                                    "class":"form-control input-md",
                                    "type":"text",
                                    "placeholder":"Genre du Film"
                                    }
                                }
                            ) }}
                        {{ form_label(formGenre.description) }}
                          {{ form_widget(
                                formGenre.description, {
                                    "attr": {
                                        "class":"form-control",
                                        "type":"textarea",
                                        "placeholder":"Description"
                                    }
                                }
                                ) }}
                            <br>
                          {{ form_widget(
                                    formGenre.ajouter, {
                                        "attr": {
                                            "class":"btn btn-primary btn-sm",
                                            "type":"submit"

                                        }
                                    }
                                    ) }}

                    {{ form_end(formGenre) }}

                    </div>
                </div>
            </div>



        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div> {% endblock %}
