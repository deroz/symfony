{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block centrale %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        {{ film.titre }}
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_admin") }}">Accueil</a>
                        </li>

                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">
                    <h2>Film Réalisé le {{ film.dateDeRealisation|date("d/m/Y") }} </h2>
                    <p>{{ film.liaisonGenre.type }}</p>
                    <div class="table-responsive">

                    </div>
                </div>
            </div>



        </div>
        <!-- /.container-fluid -->
          <img class="img-thumbnail" width="600px" src="{{ asset(film.displayImage) }}">
        <h2>Ma Note : {{ film.note }} / 5</h2>
    </div>
