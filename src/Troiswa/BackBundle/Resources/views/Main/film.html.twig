{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block centrale %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Tous Les Films
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_admin") }}">Accueil</a>
                        </li>

                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">

                    <h2>Films</h2>
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Description</th>
                                <th>Date de Sortie</th>

                            </tr>
                            </thead>
                            <tbody>

            {% for keys,value in tousLesFilms %}
                <tr>

                    <td>{{ value.titre }}<a href="{{ path("troiswa_back_info_film",{"id":value.id}) }}" class="btn btn-success">Voir</a></td>
                    <td>{{ value.description }}<br> {{ value.liaisonGenre.type }}</td>
                    <td>{{ value.dateDeRealisation|date("d/m/Y") }}</td>
                    </td>



                </tr>
            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div> {% endblock %}
