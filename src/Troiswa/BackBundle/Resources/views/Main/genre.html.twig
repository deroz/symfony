{% extends "TroiswaBackBundle::layout.html.twig" %}

{% block centrale %}
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Les Genres
                    </h1>
                    <ol class="breadcrumb">
                        <li>
                            <i class="fa fa-dashboard"></i>  <a href="{{ path("troiswa_back_admin") }}">Accueil</a>
                        </li>
                        <li class="active">
                            <i class="fa fa-table"></i> Tables
                        </li>
                    </ol>
                </div>
            </div>
            <!-- /.row -->

            <div class="row">
                <div class="col-lg-12">

                   <a href="{{ path("troiswa_back_create_genre") }}" class="btn btn-primary">Ajoutter</a>




                    <div class="table-responsive">
                    {% for message in app.session.flashbag.get("success_genre") %}
                       <br> <p class="alert alert-success">{{ message }}</p>
                     {% endfor %}
                        <table class="table table-bordered table-hover">
                            <thead>
                            <tr>

                                <th>Type</th>
                                <th>Description du Genre</th>
                                <th>Action</th>

                            </tr>
                            </thead>
                            <tbody>



                    {% for keys,value in genres %}
                        <tr>


                            <td>{{ value.type }}</td><td> {{ value.description }}</td>
                            <td> <a href="{{ path("troiswa_back_genre_modifier",{"id":value.id}) }}" class="btn btn-success">Modifier</a>
                                <a href="{{ path("troiswa_back_genre_supprimer",{"id":value.id}) }}" class="btn btn-danger">Supprimer</a>
                            </td>





                        </tr>
                    {% endfor %}



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div> {% endblock %}
